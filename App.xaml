<Application x:Class="EncoderDecoderApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EncoderDecoderApp"
             StartupUri="UI/Authorization.xaml">
    <Application.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei"></Setter>
            <Setter Property="Width" Value="185" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Background" Value="#d1d5de" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei"></Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei"></Setter>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontFamily" Value="Microsoft JhengHei"></Setter>
        </Style>
    </Application.Resources>
</Application>
